<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Page</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/bundles/css")

    <script>
        var strPath = @Html.Raw(Json.Encode(@ViewBag.Path));
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Victoria Marie", "Index", "Main", new { area = "" }, new { @class = "navbar-brand", @id = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="https://www.youtube.com/channel/UCVbTDBZ80DEguRp_UJDKoLw"><img src="~/img/icons/victoria-marie-youtube-2.png" /></a></li>
                    <li><a href="https://www.instagram.com/growingolden/"><img src="~/img/icons/victoria-marie-instagram-2.png" /></a></li>
                    <li><a href="https://www.facebook.com/MsVictoriaMarie/"><img src="~/img/icons/victoria-marie-facebook-2.png" /></a></li>
                    <li><a href="https://www.twitter.com/MsVictoriaMarie/"><img src="~/img/icons/victoria-marie-twitter-2.png" /></a></li>
                    @*<li>@Html.ActionLink("Home", "Index", "Main")</li>*@
                    @*<li class="contact-btn"><a>Contact Me</a></li>*@
                </ul>
            </div>
        </div>
    </div>
    <div class="jumbotron">
        <div class="container">
            <div class="col-sm-12 vertical-align">
                <h2 class="scroll-reveal">VICTORIA MARIE</h2>
                <img class="scroll-reveal" src="~/img/icons/victoria-marie-logo.png" />
            </div>
        </div>
    </div>
    <div class="container container-table body-content center-content">
        @RenderBody()
    </div>
    <div id="snacks"></div>
    <footer class="footer">
        <div class="container center-content text-muted">Copyright © 2017 <a href="">Victoria Marie</a>. All Rights Reserved.</div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
    @if (@ViewBag.Snack != null)
    {
        @:snack("@ViewBag.Snack");
    }
    </script>
</body>
</html>
